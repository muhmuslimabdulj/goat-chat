# GOAT Chat Environment Variables
# Copy this file to .env and customize for your environment

# Server Configuration
PORT=8080

# Security: Allowed Origins for WebSocket (comma-separated)
# For production, set to your actual domain(s)
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# Session Configuration
SESSION_TTL_HOURS=24

# Rate Limiting (requests per second)
RATE_LIMIT_API=10
RATE_LIMIT_WS=5
RATE_LIMIT_STRICT=2

# Logging
LOG_LEVEL=info

# WebSocket Configuration
MAX_MESSAGE_SIZE=4096
MAX_HISTORY_SIZE=200

# Mobile App (Capacitor)
# URL server untuk aplikasi mobile Android
CAPACITOR_SERVER_URL=https://your-deployed-server.com

# GIPHY API Key
GIPHY_API_KEY=your-giphy-api-key